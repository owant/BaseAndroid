<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.richdataco.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="${app_name}"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--圆形图片-->
        <activity android:name=".ui.TestRoundViewActivity" />

        <!--图片裁剪-->
        <activity android:name=".ui.TestImageCropActivity" />
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />

        <!--可以拖动排序的ListView-->
        <activity android:name=".ui.TestSortListViewActivity" />

        <!--bind view tool的使用-->
        <activity android:name=".ui.TestBindViewToolsActivity" />

        <activity android:name=".ui.TestMPermissionActivity" />

        <activity android:name=".ui.TestNetActivity" />

        <activity android:name=".ui.TestViewStyleActivity" />


    </application>

</manifest>